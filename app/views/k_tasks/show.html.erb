<h1>id = <%= @k_task.id %> のタスク詳細ページ</h1>

<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @k_task.id %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @k_task.content %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @k_task.status %></td>
  </tr>
</table>

<%= link_to 'このメッセージを編集する', edit_k_task_path(@k_task), class: 'btn btn-default' %>
<%= link_to 'このメッセージを削除する', @k_task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
