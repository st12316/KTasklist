<%= form_for(k_task) do |f| %>

<% if k_task.errors.any? %>

  <div id="error_explanation">
    <ul>
      <% k_task.errors.full_messages.each do |k_task| %>
        <li> <%= k_task %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
  
<%= f.label :content, 'タスク' %>

<%= f.text_field :content %>

<%= f.label :status, 'ステータス' %>

<%= f.text_field :status %>
  
<%= f.submit '投稿' %>

<% end %>